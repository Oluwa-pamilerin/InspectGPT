{
  "name": "inspectgpt",
  "displayName": "InspectGPT",
  "publisher": "O-T-S",
  "description": "AI code Inspector and Assistant. No API key Needed.",
  "version": "4.0.2",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Debuggers",
    "Education",
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:extension.openWebview",
    "onCommand:inspectgpt.openWebview"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.inspectGPT",
        "title": "Inspect GPT"
      },
      {
        "command": "extension.inspectGPTBar",
        "title": "Inspect GPT"
      },
      {
        "command": "extension.inspectGPTAPIKey",
        "title": "InspectGPT API KEY"
      },
      {
        "command": "extension.inspectGPTCommand",
        "title": "Run InspectGPT Command"
      },
      {
        "command": "extension.inspectGPT",
        "title": "InspectGPT"
      },
      {
        "command": "extension.openWebview",
        "title": "Open Webview"
      },
      {
        "command": "extension.openWebview",
        "title": "Open Webview"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.inspectGPT",
          "group": "2_modification",
          "when": "editorFocus"
        }
      ]
    },
    "configuration": [
      {
        "title": "InspectGPT",
        "properties": {
          "InspectGPT.apiKey": {
            "type": "string",
            "default": "",
            "description": "Insert your OpenAI API key and Reload This Window (Ctrl + R)"
          }
        }
      },
      {
        "title": "Deactivate Pop-up Window",
        "properties": {
          "InspectGPT.deactivate-Popup-Window": {
            "type": "string",
            "default": "",
            "description": "To deactivate, type 'd'. Else, leave EMPTY and Reload This Window (Ctrl + R)"
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@google-ai/generativelanguage": "^1.1.0",
    "@google/generative-ai": "^0.1.1",
    "axios": "^1.5.0",
    "bard-ai": "^2.0.3",
    "dotenv": "^16.3.1",
    "fast-xml-parser": "^4.2.7",
    "node-fetch": "^3.3.2",
    "xml-parser": "^1.2.1",
    "colors": "^1.4.0",
    "openai": "^3.3.0",
    "readline-sync": "^1.4.10"
  },
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Oluwa-pamilerin/InspectGPT"
  },
  "license": "MIT",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
